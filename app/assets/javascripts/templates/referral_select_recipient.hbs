<div class='content'>
  <div class="accordion-heading" data-toggle="collapse" data-target=".select-recipient .accordion-body">
    <a {{action selectRecipient}}><h2> 1. Select a friend</h2></a>
  </div>
  <div {{bindAttr class="selectingRecipient:visible:invisible :accordion-body" }} >
    <h3>Enter a friend's name or email</h3>
    {{view Ember.TextField class="recipient-name-or-email" valueBinding="view.recipient.email" id="wala"}}
  </div>
</div>
