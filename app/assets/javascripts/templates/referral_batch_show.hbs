<!-- binds against referralBatch -->

<div class="content">
  <p>{{#if copy.client_1bog}}
    Select your friends, write them a message explaining why they would be interested in solar, and track your social impact.
    {{else}}
    Share your socially responsible purchase with your friends. Select your friends, write them a message highlighting why they too would appreciate it, and track your social impact.
    {{/if}}
  </p>

  <div class="login-options">
    <div class="pluginSkinLight">
      <div class="pluginLoginButton pluginLoginButtonLarge">
        <div>
          <a {{action attemptAuthAndRefer}} >
            <div class="pluginFaviconButton pluginFaviconButtonEnabled pluginFaviconButtonLarge" role="button" tabindex="0" id="u_0_0">
              <table class="uiGrid" cellspacing="0" cellpadding="0">
                <tbody>
                  <tr>
                    <td>
                      <i class="pluginFaviconButtonIcon img sp_login-button sx_login-button_Large"></i><i class="pluginFaviconButtonIconActive img sp_login-button sx_login-button_Largea"></i><span class="pluginFaviconButtonIconThrobber"><i class="img sp_login-button sx_login-button_"></i></span>
                    </td>
                    <td>
                      <span class="pluginFaviconButtonBorder"><span class="pluginFaviconButtonText fwb fbLarge">Log In with Facebook</span></span>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </a>
        </div>
      </div>
    </div>

    <br>
    <hr class="login-options-or"/>
    <br>
    <div class="new-auth">
      <a class="btn btn-large btn-authenticate start-sharing" data-target="#new-auth-fields" data-toggle="collapse">
        Share with your friends
      </a>
      <br>
      <div class="new-auth-fields collapse" id="new-auth-fields">
        <label> What's your name?</label> {{view Ember.TextField valueBinding="view._senderName" id="sender-name" placeholder="Jane Doe"}} <br>
        <label>And your email? </label>{{view Ember.TextField classBinding="view._invalidEmail:invalid" valueBinding="view._senderEmail" id="sender-email" placeholder="jane@example.com"}}
        <span {{bindAttr class=":invalid-helper :email view._invalidEmail:invalid"}}> Please enter a valid email address! </span>
        <br>
        <a id="share-now" class="btn btn-large btn-authenticate validate-sharing" {{action shareClicked view._senderName view._senderEmail target="view" }}>
          Share!
        </a>
      </div>
    </div> {{!new auth}}
  </div> {{! login-options}}
</div> {{! content }}
