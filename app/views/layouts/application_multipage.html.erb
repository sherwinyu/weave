<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= javascript_tag do %>
      window.facebookToken = "<%=j current_user.authorizations.last.oauth_token if user_signed_in? %>";
    <% end %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="user_nav">
      <% if user_signed_in? %>
        Logged in as <strong><%= current_user.email %></strong>.
        <%= link_to 'Edit profile', edit_user_registration_path %> |
        <%= link_to "Logout", destroy_user_session_path, method: :delete, id: "sign-out"%>
      <% else %>
        <%= link_to "Sign up", new_user_registration_path %> |
        <%= link_to "Login", new_user_session_path %> |
        <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), id:'sign-in-facebook'%>
      <% end %>
    </div>
    <div class="well debug">
      Session:
      <%= simple_format session.to_yaml %>
      Current User:
      <%= current_user %>
    </div>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
